```{r}
Benefit_recipients <- economic_indicators %>% 
  filter(Onderwerp == "Uitkeringsontvangers totaal") %>% 
  filter(`Regio's` != "Nederland") %>% 
  rename(Region = `Regio's`,
         Total = Totalen,
         Period = Perioden) %>%
  filter(!is.na(Total))

Benefit_recipients$Region <- recode(Benefit_recipients$Region,
                                    "Groningen (PV)" = "Groningen",
                                    "Drenthe (PV)" = "Drenthe",
                                    "Fryslân (PV)" =  "Fryslân")

view(Benefit_recipients)


Groningen <- Benefit_recipients %>% filter(Region == "Groningen") 
Drenthe <- Benefit_recipients %>% filter(Region == "Drenthe") 
Fryslan <- Benefit_recipients %>% filter(Region == "Fryslân")
```

```{r}
ui_BR <- fluidPage(
  sidebarLayout(
    sidebarPanel(),
    mainPanel(width = 11,
              plotlyOutput("plotBenefitR"))
  )
)





server3 <- function(input, output) {
  
  output$plotBenefitR <- renderPlotly(
    ggplot(data = Benefit_recipients, aes(x = Period, y = Total, color = Region, group = 1)) +
      geom_line(data = Drenthe, aes(x = Period, y = Total, group = 1)) +
      geom_line(data = Groningen, aes(x = Period, y = Total, group = 1)) +
      geom_line(data = Fryslan, aes(x = Period, y = Total, group = 1)) + 
      theme_bw() + 
      theme(
        plot.title = element_text(size = 15, family = "Times", face = "bold"),
        plot.subtitle = element_text(size = 13, family = "Times",
                                     face = "italic"),
        plot.background = element_rect(fill = "aliceblue"),
        panel.grid.major.y = element_line(colour = "azure2"),
        panel.grid.minor.y = element_line(colour = "azure2"),
        panel.grid.major.x = element_blank(),
        axis.title = element_text(size = 12, face = "bold"),
        axis.text.x = element_text(angle = 40)
      ) +
      labs(
        x = "Years", y = "Benefit recipients",
        title = "Number of benefit recipients per province",
        subtitle = "Groningen, Fryslând, Drenthe",
        color = "Region" )
  )
}

shinyApp(ui_BR, server3)
```


```{r}
Unemployment <- economic_indicators %>% 
  filter(Onderwerp == "Werkloosheid totaal") %>% 
  filter(`Regio's` != "Nederland") %>% 
  rename(Region = `Regio's`,
         Total = Totalen,
         Period = Perioden) %>%
  filter(!is.na(Total))

Unemployment$Region <- recode(Unemployment$Region,
                                    "Groningen (PV)" = "Groningen",
                                    "Drenthe (PV)" = "Drenthe",
                                    "Fryslân (PV)" =  "Fryslân")
Groningen <- Unemployment %>% filter(Region == "Groningen") 
Drenthe <- Unemployment %>% filter(Region == "Drenthe") 
Fryslan <- Unemployment %>% filter(Region == "Fryslân")


view(Unemployment)
```

```{r}
ui_UN <- fluidPage(
  sidebarLayout(
    sidebarPanel(),
    mainPanel(width = 11,
              plotlyOutput("plotUnemployment"))
  )
)

server4 <- function(input, output) {
  
  output$plotUnemployment <- renderPlotly(
    ggplot(data = Unemployment, aes(x = Period, y = Total, color = Region, group = 1)) +
      geom_line(data = Drenthe, aes(x = Period, y = Total, group = 1)) +
      geom_line(data = Groningen, aes(x = Period, y = Total, group = 1)) +
      geom_line(data = Fryslan, aes(x = Period, y = Total, group = 1)) + 
      theme_bw() + 
      theme(
        plot.title = element_text(size = 15, family = "Times", face = "bold"),
        plot.subtitle = element_text(size = 13, family = "Times",
                                     face = "italic"),
        plot.background = element_rect(fill = "aliceblue"),
        panel.grid.major.y = element_line(colour = "azure2"),
        panel.grid.minor.y = element_line(colour = "azure2"),
        panel.grid.major.x = element_blank(),
        axis.title = element_text(size = 12, face = "bold"),
        axis.text.x = element_text(angle = 40)
      ) +
      labs(
        x = "Years", y = "Unemployed people",
        title = "Number of unemployed people per province",
        subtitle = "Groningen, Fryslând, Drenthe",
        color = "Region" )
  )
}

shinyApp(ui_UN, server4)

```

